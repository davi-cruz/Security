{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "workspaceName": {
            "type": "string"
        },
        "Environment": {
            "type": "string"
        },
        "InformationClassification": {
            "type": "string"
        },
        "Severity": {
            "type": "string"
        },
        "Squad": {
            "type": "string"
        }
    },
    "resources": [
        {
            "apiVersion": "2017-03-15-preview",
            "name": "[parameters('workspaceName')]",
            "location": "[resourceGroup().location]",
            "tags": {
                "Environment": "[parameters('Environment')]",
                "InformationClassification": "[parameters('InformationClassification')]",
                "Severity": "[parameters('Severity')]",
                "Squad": "[parameters('Squad')]"
            },
            "type": "Microsoft.OperationalInsights/workspaces",
            "properties": {
                "sku": {
                    "name": "pergb2018"
                },
                "retentionInDays": 90
            }
        },
        {
            "name": "[concat(parameters('workspaceName'),'/Microsoft.SecurityInsights/default')]",
            "type": "Microsoft.OperationalInsights/workspaces/providers/onboardingStates",
            "apiVersion": "2021-03-01-preview",
            "tags": {
                "Environment": "[parameters('Environment')]",
                "InformationClassification": "[parameters('InformationClassification')]",
                "Severity": "[parameters('Severity')]",
                "Squad": "[parameters('Squad')]"
            },
            "properties": {
            },
            "dependsOn": [
                "[resourceId('Microsoft.OperationalInsights/workspaces', parameters('workspaceName'))]"
            ]
        }
    ]
}